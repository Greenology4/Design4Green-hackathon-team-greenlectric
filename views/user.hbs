        }

        .btn-group {
            color: white;
            top: 140%;
            left: 15%;
            width: 70%;
            display: block;
        }

        .btn-group button:not(:last-child) {
            border-bottom: none;
        }

        .btn-group button:hover {
            background-color: #3e8e41;
        }

        table {
            border: 2px solid;
            border-radius: 5px;
            border-collapse: collapse;

        }

        table th {
            border: 1px solid;
        }

        table td {
            border: 1px solid;
